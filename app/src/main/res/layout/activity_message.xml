<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.yaoht.onlinechat.activity.MessageActivity">

    <ListView
        android:id="@+id/activity_message_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/activity_message_edittext_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/activity_message_button_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/send" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/activity_message_button_file"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/file" />

    </LinearLayout>
</LinearLayout>
